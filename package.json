{
  "name": "@kubecraft/launcher",
  "version": "0.0.1",
  "displayName": "Kubecraft Launcher",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "electron:generate-icons": "electron-icon-builder --input=./src/assets/logo.png --output=build --flatten",
    "publish": "yarn electron:generate-icons && yarn electron:build -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kubecraftserver/launcher.git"
  },
  "main": "background.js",
  "dependencies": {
    "core-js": "^3.6.4",
    "minecraft-launcher-core": "^3.13.3",
    "vue": "^2.6.11",
    "vue-fragment": "^1.5.1",
    "vue-router": "^3.1.6",
    "vue2-touch-events": "^2.2.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.3.0",
    "@vue/cli-plugin-eslint": "~4.3.0",
    "@vue/cli-plugin-router": "~4.3.0",
    "@vue/cli-service": "~4.3.0",
    "babel-eslint": "^10.1.0",
    "electron": "^6.0.0",
    "electron-icon-builder": "^1.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "lint-staged": "^9.5.0",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "vue-cli-plugin-electron-builder": "~1.4.6",
    "vue-template-compiler": "^2.6.11"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
